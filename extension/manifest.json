{
  "manifest_version": 2,
  "name": "Protect IID",
  "version": "1.17",
  "description": "Minimalistic single-use email address generator.",
  "permissions": ["activeTab"],
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  }
}
